{
  "compilerOptions": {
    "target": "es2016",
    "lib": [],
    "module": "commonjs",                         
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@database/*": [
        "src/shared/infra/typeorm/database/*"
      ],
      "@errors/*": [
        "src/shared/infra/errors/*"
      ],
      "@middlewares/*": [
        "src/shared/infra/http/middlewares/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@routes/*": [
        "src/shared/infra/http/routes/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@root/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts"]
}